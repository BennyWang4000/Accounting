<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pieChart.PieChartFragment">

    <TextView
        android:id="@+id/tv_date_range"
        android:text="2020/00/00 ~ 2020/00/00"
        android:layout_marginTop="10dp"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/colorGray"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toTopOf="@id/layout_tab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"

        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date_range" >
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自訂"/>
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月"/>
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_half_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="半年"/>
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年"/>
    </com.google.android.material.tabs.TabLayout>
    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/colorGray"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/layout_tab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart_pie"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_tab"/>
    <View
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/colorGray"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/chart_pie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_type_rank"
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/line_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>