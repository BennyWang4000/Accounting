<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:id="@+id/layout_calculator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:layout_constraintBottom_toBottomOf="parent"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp">

    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_divided"
            android:text="รท"
            android:textSize="25sp"
            android:textColor="@android:color/holo_orange_dark"
            style="@style/CalculatorButton"/>
        <Button
            android:id="@+id/bt_1"
            android:text="1"
            style="@style/CalculatorButton"/>
        <Button
            android:id="@+id/bt_4"
            android:text="4"
            style="@style/CalculatorButton"/>
        <Button
            android:id="@+id/bt_7"
            android:text="7"
            style="@style/CalculatorButton"/>
        <Button
            android:id="@+id/bt_point"
            android:text="."
            style="@style/CalculatorButton"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_two"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_multiplied"
            android:text="ร"
            android:textSize="25sp"
            android:textColor="@android:color/holo_blue_light"
            style="@style/CalculatorButton"/>
        <Button
            android:id="@+id/bt_2"
            android:text="2"
            style="@style/CalculatorButton"/>
        <Button
            android:id="@+id/bt_5"
            android:text="5"
            style="@style/CalculatorButton"/>
        <Button
            android:id="@+id/bt_8"
            android:text="8"
            style="@style/CalculatorButton"/>
        <Button
            android:id="@+id/bt_0"
            android:text="0"
            style="@style/CalculatorButton"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_three"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_minus"
            android:text="-"
            android:textSize="25sp"
            android:textColor="@android:color/holo_red_light"
            style="@style/CalculatorButton"/>
        <Button
            android:id="@+id/bt_3"
            android:text="3"
            style="@style/CalculatorButton"/>
        <Button
            android:id="@+id/bt_6"
            android:text="6"
            style="@style/CalculatorButton"/>

        <Button
            android:id="@+id/bt_9"
            android:text="9"
            style="@style/CalculatorButton"/>

        <Button
            android:id="@+id/bt_backspace"
            android:drawableEnd="@drawable/ic_outline_backspace_24_gray"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            style="@style/CalculatorButton"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_ac"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_plus"
            android:text="+"
            android:textSize="25sp"
            android:textColor="@android:color/holo_green_light"
            style="@style/CalculatorButton"/>
        <Button
            android:id="@+id/bt_ac"
            android:text="AC"
            android:textSize="20sp"
            android:background="@drawable/ahorro_button_red_rect"
            android:textColor="@color/AhorroWhite"
            android:layout_width="match_parent"
            android:layout_height="124dp"/>
        <Button
            android:id="@+id/bt_ok"
            android:text="OK"
            android:textSize="20sp"
            android:background="@drawable/ahorro_button_green_rect"
            android:textColor="@color/AhorroWhite"
            android:layout_width="match_parent"
            android:layout_height="124dp"/>
    </LinearLayout>
</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>