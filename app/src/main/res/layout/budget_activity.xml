<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".budget.BudgetActivity"
    android:background="@color/AhorroBackground_YellowLight"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_budget"
        app:logo="@drawable/ic_baseline_data_usage_24_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Budget"
        app:titleTextColor="#FFF"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24_white"
        style="@style/ToolBarStyle"/>


    <LinearLayout
        android:id="@+id/budget_layout_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_budget"
        android:orientation="horizontal"
        android:gravity="right"
        android:background="@drawable/ahorro_budget_orange"
        android:clickable="true"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_add_money_sign"
            android:text="$"
            android:textSize="40sp"
            android:layout_marginRight="5dp"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/budget_tv_budget"
            android:textSize="40sp"
            android:gravity="end"
            android:text="100"
            android:textColor="?attr/colorOnPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/budget_layout_date"
        app:layout_constraintTop_toBottomOf="@id/budget_layout_budget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/SettingItemStyle">
        <ImageView
            android:id="@+id/budget_iv_date"
            android:src="@drawable/ic_baseline_date_range_24_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/setting_tv_currency"
            android:text="預算週期"
            style="@style/SettingTextViewStyle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:id="@+id/setting_tv_show_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始於"
                style="@style/SettingTextViewStyle"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/budget_layout_is_show"
        app:layout_constraintTop_toBottomOf="@id/budget_layout_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/SettingItemStyle"
        android:clickable="false">
        <ImageView
            android:id="@+id/setting_iv_passcode"
            android:src="@drawable/ic_baseline_data_usage_24_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/setting_tv_passcode"
            android:text="顯示預算"
            style="@style/SettingTextViewStyle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <Switch
                android:id="@+id/budget_sw_is_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View app:layout_constraintTop_toBottomOf="@id/budget_layout_date" style="@style/LineStyle" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <View app:layout_constraintTop_toBottomOf="@id/budget_layout_is_show" style="@style/LineStyle" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

    <include layout="@layout/add_new_calculator" />
</androidx.constraintlayout.widget.ConstraintLayout>