    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_budget"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/ahorro_button_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/layout_pigbank"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/budget_im_pigbank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_android_24_black" />

            <TextView
                android:id="@+id/budget_tv_pigbank_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textColor="?attr/colorOnSecondary" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_remaining_budget"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:id="@+id/budget_tv_money_sign"
                    android:text="$"
                    android:textSize="30dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/budget_tv_remaining_budget"
                    android:text="5000"
                    android:textSize="30dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/budget_tv_money_sign"
                    app:layout_constraintTop_toTopOf="@id/budget_tv_money_sign"
                    app:layout_constraintBottom_toBottomOf="@id/budget_tv_money_sign"/>

                <TextView
                    android:id="@+id/budget_tv_slash_sign"
                    android:text=" / "
                    android:textSize="30dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/budget_tv_remaining_budget"
                    app:layout_constraintTop_toTopOf="@id/budget_tv_remaining_budget"
                    app:layout_constraintBottom_toBottomOf="@id/budget_tv_remaining_budget"/>

                <TextView
                    android:id="@+id/budget_tv_total_budget"
                    android:text="10000"
                    android:textSize="30dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/budget_tv_slash_sign"
                    app:layout_constraintTop_toTopOf="@id/budget_tv_slash_sign"
                    app:layout_constraintBottom_toBottomOf="@id/budget_tv_slash_sign" />
                <TextView
                    android:text="剩餘預算"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/budget_tv_remaining_budget"
                    app:layout_constraintEnd_toEndOf="@id/budget_tv_remaining_budget"/>
                <TextView
                    android:text="預算總額"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/budget_tv_total_budget"
                    app:layout_constraintEnd_toEndOf="@id/budget_tv_total_budget"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>