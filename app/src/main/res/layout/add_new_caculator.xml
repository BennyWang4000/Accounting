<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_div"
            android:text="÷"
            android:textColor="@android:color/holo_orange_light"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/bt_one"
            android:text="1"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/bt_four"
            android:text="4"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/bt_seven"
            android:text="7"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/bt_dot"
            android:text="."
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_two"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_product"
            android:text="×"
            android:background="@android:color/white"
            android:textColor="@android:color/holo_blue_light"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/bt_two"
            android:text="2"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/bt_five"
            android:text="5"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/bt_eight"
            android:text="8"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/bt_zero"
            android:text="0"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_three"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_minus"
            android:text="-"
            android:textColor="@android:color/holo_red_light"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/bt_three"
            android:text="3"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/bt_six"
            android:text="6"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/bt_nine"
            android:text="9"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/bt_backspace"
            android:text="←"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_ac"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_add"
            android:text="+"
            android:textColor="@android:color/holo_green_light"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/bt_ac"
            android:text="AC"
            android:background="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>
        <Button
            android:id="@+id/bt_ok"
            android:text="OK"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>