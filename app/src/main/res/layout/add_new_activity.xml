<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_add_new"
    tools:context=".addNewItem.AddNewActivity"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AhorroBackground_YellowLight"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        app:logo="@drawable/ic_round_monetization_on_24_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/AhorroActionBar_Gray"
        app:title="Expense"
        app:titleTextColor="#FFF"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24_white"
        android:elevation="2dp"/>

        <LinearLayout
            android:id="@+id/layout_bt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/toolbar_add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:background="?attr/colorPrimaryDark">
            <TextView
                android:id="@+id/tv_today"
                android:text="Today"
                android:textColor="?attr/colorOnPrimary"
                android:gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_costs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_bt_title"
            android:orientation="horizontal"
            android:gravity="right"
            android:background="@drawable/ahorro_button_rect"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_add_money_sign"
                android:text="$"
                android:textSize="40sp"
                android:layout_marginRight="5dp"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_add_cost"
                android:textSize="40sp"
                android:gravity="end"
                android:text="100"
                android:textColor="?attr/colorOnPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_costs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </androidx.viewpager2.widget.ViewPager2>

    <View
        android:id="@+id/add_line_1"
        style="@style/LineStyle"
        app:layout_constraintTop_toBottomOf="@id/pager_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/layout_edit_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_line_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ahorro_button_yellow"
        android:clickable="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_edit_title"
                android:src="@drawable/ic_baseline_edit_24_gray"
                android:layout_width="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <LinearLayout
                android:id="@+id/layout_edit_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="25dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:id="@+id/tv_title_title"
                    android:text="標題"
                    android:textSize="13sp"
                    android:textColor="@color/AhorroTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_title"
                    android:text=" "
                    android:textSize="10sp"
                    android:textColor="@color/AhorroIconColor_Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <View
        android:id="@+id/add_line_2"
        style="@style/LineStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_edit_title_container" />
    <LinearLayout
        android:id="@+id/layout_edit_note_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_line_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ahorro_button_yellow"
        android:clickable="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_edit_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_edit_note"
                android:src="@drawable/ic_baseline_credit_card_24_gray"
                android:layout_width="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <LinearLayout
                android:id="@+id/layout_edit_note_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="25dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:id="@+id/tv_title_note"
                    android:text="帳戶"
                    android:textSize="13sp"
                    android:textColor="@color/AhorroTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_note"
                    android:text=" "
                    android:textSize="10sp"
                    android:textColor="@color/AhorroIconColor_Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <View
        android:id="@+id/add_line_3"
        style="@style/LineStyle"
        app:layout_constraintTop_toBottomOf="@id/layout_edit_note_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/layout_edit_expense_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_line_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ahorro_button_yellow"
        android:clickable="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_edit_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_edit_expense"
                android:src="@drawable/ic_baseline_replay_24_gray"
                android:layout_width="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <LinearLayout
                android:id="@+id/layout_edit_expense_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="25dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:id="@+id/tv_title_expense"
                    android:text="固定支出"
                    android:textSize="13sp"
                    android:textColor="@color/AhorroTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_expense"
                    android:text="無"
                    android:textSize="10sp"
                    android:textColor="@color/AhorroIconColor_Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <View
        android:id="@+id/add_line_4"
        style="@style/LineStyle"
        app:layout_constraintTop_toBottomOf="@id/layout_edit_expense_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/add_layout_receipt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/ToolBarStyle"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/add_iv_receipt"
            android:src="@drawable/ic_baseline_center_focus_strong_24_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/add_tv_receipt"
            android:text="發票掃描"
            android:textColor="@color/AhorroWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <include layout="@layout/add_new_calculator" />
</androidx.constraintlayout.widget.ConstraintLayout>