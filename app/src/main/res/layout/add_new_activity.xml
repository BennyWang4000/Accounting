<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".addNewItem.addNewFragment.AddNewActivity"
    >
    <data>
        <variable
            name="viewModel"
            type="com.example.accounting.addNewItem.addNewFragment.AddNewViewModel"/>
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_add_new"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AhorroBackground_YellowLight">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        app:logo="@drawable/ic_round_monetization_on_24_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/AhorroActionBar_Gray"
        app:title="Expense"
        app:titleTextColor="#FFF"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24_white"
        android:elevation="2dp"/>

        <LinearLayout
            android:id="@+id/layout_bt_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/toolbar_add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:background="@color/AhorroRedDark">

            <TextView
                android:id="@+id/tv_today"
                android:text="Today"
                android:textColor="@color/AhorroWhite"
                android:gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_costs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_bt_title"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/AhorroRed"
            android:paddingBottom="10dp">


            <EditText
                android:id="@+id/et_cost"
                android:textSize="40dp"
                android:inputType="number"
                android:ems="5"
                android:gravity="right"
                android:text="100"
                android:textColor="@color/AhorroWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager_type"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_costs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@id/pager_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:ems="10"
        android:hint="name"
        android:text="吱吱"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pager_type" />
    <View
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/et_note"
        android:hint="note"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:ems="10"
        android:text="喳喳"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/line_4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@id/et_note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


<!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--        android:id="@+id/flt_bt_save"-->
<!--        android:src="@drawable/ic_baseline_save_24_white"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        android:layout_margin="20dp"/>-->


<!--    calculator-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        app:layout_constraintBottom_toBottomOf="parent"

        app:behavior_hideable="false"
        app:behavior_peekHeight="90dp">
        <LinearLayout
            android:id="@+id/layout_one"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_div"
                android:text="÷"
                android:textSize="25sp"
                android:textColor="@android:color/holo_orange_dark"
                android:background="@drawable/ahorro_button_calculator"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <Button
                android:id="@+id/bt_one"
                android:text="1"
                android:textSize="20sp"
                android:textColor="@color/AhorroTextColor"
                android:background="@drawable/ahorro_button_calculator"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <Button
                android:id="@+id/bt_four"
                android:text="4"
                android:textSize="20sp"
                android:textColor="@color/AhorroTextColor"
                android:background="@drawable/ahorro_button_calculator"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <Button
                android:id="@+id/bt_seven"
                android:text="7"
                android:textSize="20sp"
                android:textColor="@color/AhorroTextColor"
                android:background="@drawable/ahorro_button_calculator"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <Button
                android:id="@+id/bt_dot"
                android:text="."
                android:textSize="20sp"
                android:textColor="@color/AhorroTextColor"
                android:background="@drawable/ahorro_button_calculator"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_two"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_product"
                android:text="×"
                android:textSize="25sp"
                android:background="@drawable/ahorro_button_calculator"
                android:textColor="@android:color/holo_blue_light"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <Button
                android:id="@+id/bt_two"
                android:text="2"
                android:textSize="20sp"
                android:textColor="@color/AhorroTextColor"
                android:background="@drawable/ahorro_button_calculator"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <Button
                android:id="@+id/bt_five"
                android:text="5"
                android:textSize="20sp"
                android:textColor="@color/AhorroTextColor"
                android:background="@drawable/ahorro_button_calculator"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <Button
                android:id="@+id/bt_eight"
                android:text="8"
                android:textSize="20sp"
                android:textColor="@color/AhorroTextColor"
                android:background="@drawable/ahorro_button_calculator"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <Button
                android:id="@+id/bt_zero"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/AhorroTextColor"
                android:background="@drawable/ahorro_button_calculator"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_three"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_minus"
                android:text="-"
                android:textSize="25sp"
                android:textColor="@android:color/holo_red_light"
                android:background="@drawable/ahorro_button_calculator"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <Button
                android:id="@+id/bt_three"
                android:text="3"
                android:textSize="20sp"
                android:textColor="@color/AhorroTextColor"
                android:background="@drawable/ahorro_button_calculator"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <Button
                android:id="@+id/bt_six"
                android:text="6"
                android:textSize="20sp"
                android:textColor="@color/AhorroTextColor"
                android:background="@drawable/ahorro_button_calculator"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <Button
                android:id="@+id/bt_nine"
                android:text="9"
                android:textSize="20sp"
                android:textColor="@color/AhorroTextColor"
                android:background="@drawable/ahorro_button_calculator"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <Button
                android:id="@+id/bt_backspace"
                android:text="←"
                android:textSize="25sp"
                android:textColor="@color/AhorroTextColor"
                android:background="@drawable/ahorro_button_calculator"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_ac"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_add"
                android:text="+"
                android:textSize="25sp"
                android:textColor="@android:color/holo_green_light"
                android:background="@drawable/ahorro_button_calculator"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <Button
                android:id="@+id/bt_ac"
                android:text="AC"
                android:textSize="20sp"
                android:background="@drawable/ahorro_button_red_rect"
                android:textColor="@color/AhorroWhite"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
            <Button
                android:id="@+id/bt_ok"
                android:text="OK"
                android:textSize="20sp"
                android:background="@drawable/ahorro_button_green_rect"
                android:textColor="@color/AhorroWhite"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="2"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>