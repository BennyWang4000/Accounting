<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editText.EditTextActivity"
    android:background="@color/AhorroBackground_YellowLight">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_edit"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        app:logo="@drawable/ic_round_monetization_on_24_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/AhorroActionBar_Gray"
        app:title="Expense"
        app:titleTextColor="#FFF"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24_white"
        android:elevation="2dp"/>

    <EditText
        android:id="@+id/et_edit_area"
        android:background="@color/AhorroWhite"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="30dp"
        android:inputType="text"

        app:layout_constraintTop_toBottomOf="@id/toolbar_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>