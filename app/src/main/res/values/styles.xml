<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/AhorroWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/AhorroActionBar_Gray</item>
        <item name="android:textColor">@color/AhorroTextColor</item>
        <item name="backgroundColor">@color/AhorroBackground_YellowLight</item>
        <item name="itemTextColor">@color/AhorroTextColor</item>
        <item name="itemBackground">@drawable/ahorro_button_yellow</item>
        <item name="buttonStyle">?android:attr/borderlessButtonStyle</item>
<!--        <item name="itemBackground">@color/AhorroRed</item>"-->
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
    </style>

<!--    Calculator Button Style===============================================-->
    <style name="CalculatorButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/ahorro_button_calculator</item>
        <item name="android:textColor">@color/AhorroTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">62dp</item>
    </style>
    
<!--    Tool Bar Style===============================================-->
    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/AhorroActionBar_Gray</item>
        <item name="android:titleTextColor">@color/AhorroWhite</item>
        <item name="android:textColor">@color/AhorroWhite</item>
        <item name="elevation">2dp</item>
    </style>


<!--    Line Style===============================================-->
    <style name="LineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorGray</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>
    
<!--    Date Picker Style===============================================-->
    <style name="MainDatePickerDialog" parent="android:Widget.Holo.DatePicker">
        <item name="android:buttonBarPositiveButtonStyle">@drawable/ahorro_button_green_rect</item>
        <item name="android:buttonBarNegativeButtonStyle">@drawable/ahorro_button_red_rect</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:colorBackground">@color/AhorroBackground_YellowLight</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

<!--    Navigation Item Style===============================================-->
    <style name="MainNavigationDrawerItem">

    </style>


<!--    Setting Item Style===============================================-->
    <style name="SettingItemStyle">
        <item name="android:background">@drawable/ahorro_button_yellow</item>
        <item name="android:textColor">@color/AhorroTextColor</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
    </style>
<!--    Setting Text View Style===============================================-->
    <style name="SettingTextViewStyle">
        <item name="android:textColor">@color/AhorroTextColor</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

<!--    Expense Theme===============================================-->
    <style name="ExpenseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/AhorroBlack</item>
        <item name="android:navigationBarColor">@color/AhorroBlack</item>
        <item name="colorPrimary">@color/AhorroRedLight</item>
        <item name="colorPrimaryVariant">@color/AhorroRed</item>
        <item name="colorPrimaryDark">@color/AhorroRedDark</item>
        <item name="colorOnPrimary">@color/AhorroWhite</item>
        <item name="backgroundColor">@color/AhorroBackground_Yellow</item>
        <item name="colorOnBackground">@color/AhorroTextColor</item>
        <item name="colorSecondary">@color/AhorroBackground_YellowLight</item>
        <item name="colorSecondaryVariant">@color/AhorroBackground_Yellow</item>
        <item name="colorOnSecondary">@color/AhorroTextColor</item>
        <item name="colorAccent">@color/AhorroSwitchOn</item>
        <item name="android:datePickerStyle">@style/MainDatePickerDialog</item>
    </style>

<!--    Income Theme===============================================-->
    <style name="IncomeTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/AhorroBlack</item>
        <item name="android:navigationBarColor">@color/AhorroBlack</item>
        <item name="colorPrimary">@color/AhorroGreenLight</item>
        <item name="colorPrimaryVariant">@color/AhorroGreen</item>
        <item name="colorPrimaryDark">@color/AhorroGreenDark</item>
        <item name="colorOnPrimary">@color/AhorroWhite</item>
        <item name="backgroundColor">@color/AhorroBackground_Yellow</item>
        <item name="colorOnBackground">@color/AhorroTextColor</item>
        <item name="colorSecondary">@color/AhorroBackground_YellowLight</item>
        <item name="colorSecondaryVariant">@color/AhorroBackground_Yellow</item>
        <item name="colorOnSecondary">@color/AhorroTextColor</item>
        <item name="colorAccent">@color/AhorroSwitchOn</item>
        <item name="android:datePickerDialogTheme">@style/MainDatePickerDialog</item>
    </style>
</resources>